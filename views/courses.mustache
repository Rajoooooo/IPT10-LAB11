<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container">
    <h1 class="my-4">List of Courses</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Course Code</th>
                <th>Course Name</th>
                <th>Number of Enrollees</th>
                <th>Enrolled Student</th>
                
            </tr>
        </thead>
        <tbody>
            {{#items}}
            <tr>
                <td>{{course_code}}</td>
                <td>{{course_name}}</td>
                <td>{{enrollees_count}}</td>
                <td>
                    <a href="/course/view/{{course_code}}" class="btn btn-primary">View Course</a>
                </td>
            </tr>
            {{/items}}
        </tbody>
    </table>
</div>

<ul class="nav">
    <li class="nav-item">
        <a class="nav-link" href="/enrollment-form">Enroll Student </a>
        <a class="nav-link" href="/students">Student List</a>
    </li>
</ul>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
