<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container">
    <h1 class="my-4">Enrollment Form</h1>

    <form action="/enroll" method="POST">
        <table class="table">
            <tr>
                <td>Course</td>
                <td>
                    <select name="course_code" class="form-select" required>
                        {{#courses}}
                        <option value="{{course_code}}">{{course_name}}</option>
                        {{/courses}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Student</td>
                <td>
                    <select name="student_code" class="form-select" required>
                        {{#students}}
                        <option value="{{student_code}}">{{getFullName}}</option> <!-- Make sure this method exists -->
                        {{/students}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Enrollment Date</td>
                <td>
                    <input type="date" name="enrolment_date" class="form-control" required>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Enroll Student" class="btn btn-primary">
                </td>
            </tr>
        </table>
    </form>

    <hr>
    <ul class="nav">
        <li class="nav-item">
            <a href="/courses" class="nav-link">List of Courses</a>
        </li>
        <li class="nav-item">
            <a href="/students" class="nav-link">List of Students</a>
        </li>
    </ul>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
